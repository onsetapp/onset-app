{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint --fix 'src/**/*.js'",
    "test": "jest -o --watch --coverage=false",
    "test:ci": "jest",
    "update:snapshots": "jest -u --coverage=false",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "debug": "open rndebugger://set-debugger-loc?host=127.0.0.1&port=19001"
  },
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.2",
    "apollo-link-http": "^1.5.14",
    "aws-amplify": "^1.1.28",
    "aws-appsync": "^1.8.0",
    "aws-appsync-react": "^1.2.8",
    "expo": "^32.0.0",
    "graphql": "^14.3.1",
    "react": "^16.8.6",
    "react-apollo": "^2.5.6",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "react-navigation": "^3.9.1"
  },
  "devDependencies": {
    "@cuffney/eslint-config": "^1.0.6",
    "@unimodules/react-native-adapter": "^2.0.1",
    "babel-eslint": "^10.0.1",
    "babel-preset-expo": "^5.0.0",
    "eslint": "^5.16.0",
    "expo-cli": "^2.19.4",
    "jest-expo": "^33.0.2",
    "react-test-renderer": "^16.8.6"
  },
  "private": true,
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|react-clone-referenced-element|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|sentry-expo|native-base))"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ]
  }
}
